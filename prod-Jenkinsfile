pipeline {
    agent any

    stages {
        stage('Run Script') {
            steps {
                script {
                    sh '''
                        cd /var/www/prod
                        sudo git stash
                        sudo git pull origin prod
                        sudo rm -rf /var/www/prod/API/Build
                        sudo /opt/dotnet restore
                        sudo /opt/dotnet publish --framework net7.0 /var/www/test/API/mongodb-dotnet-example.csproj --configuration Release --output /var/www/prod/API/Build
                        sudo pkill -f mongodb-dotnet-example
                        sudo rm -rf /var/www/prod/API/Build/web.config
                        sudo rm -rf /var/www/prod/API/Build/appsettings.PreProd.json
                        sudo rm -rf /var/www/prod/API/Build/appsettings.Prod.json
                        sudo /opt/dotnet test /var/www/prod/Tests/MongoTests/
                        sudo sshpass -p 'Welcome123' ssh testadmin@98.70.15.172 "C:\\Windows\\SysWOW64\\inetsrv\\appcmd.exe stop site /site.name:\"prod.com\""
                        echo "apppool stop"
                        sudo sshpass -p 'Welcome123' ssh testadmin@98.70.15.172 "C:\\Windows\\SysWOW64\\inetsrv\\appcmd.exe stop apppool /apppool.name:\"prod.com\""
                        echo "apppool stop"
                        sudo chmod 755 /var/www/prod/API/Build -R
                        cd /var/www/prod/API/Build
                        sudo lftp -e  "mirror --overwrite -R /var/www/prod/API/Build .;quit" -u prod,Welcome@123 98.70.15.172
                        sudo sshpass -p 'Welcome123' ssh testadmin@98.70.15.172 "C:\\Windows\\SysWOW64\\inetsrv\\appcmd.exe start site /site.name:\"prod.com\""
                        echo "apppool started"
                        sudo sshpass -p 'Welcome123' ssh testadmin@98.70.15.172 "C:\\Windows\\SysWOW64\\inetsrv\\appcmd.exe start apppool /apppool.name:\"prod.com\""
                        echo "site started"
                    '''
                }
            }
        }
    }
}
